
@{
    ViewBag.Title = "T100Order";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>T100Order</title>
   
</head>
<body>
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step">T100Order</em>
                        <em class="gray-em" id="step1" style="display:none;">Query Results</em>
                        <em class="gray-em" id="step2" style="display:none;">Create/Edit Account</em>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div id="Query">
                        <h3 class="form-section" style="text-align:center"></h3>
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>Brand:</span>
                                <select id="Brand" name="Brand" class="m-wrap span8">
                                    <option value="">1</option>
                                </select>
                            </div>
                            <div class="span4 ">
                                <span>PI No:</span>
                                <input type="text" id="PINo" name="PINo" class="m-wrap span8" />
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>Category:</span>
                                <input type="text" id="Category" name="Category" class="m-wrap span8" />
                            </div>
                            <div class="span4 ">
                                <span>OOS No:</span>
                                <input type="text" id="OOSNo" name="OOSNo" class="m-wrap span8" />
                            </div>
                           

                        </div>
                        @*第三行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>OrderDate:</span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span4" size="16" type="text" value="" name="dpOrderStartTime">
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span4" size="16" type="text" value="" name="dpOrderEndTime">
                            </div>
                            <div class="span4 ">
                                <span>Add Comments:</span>
                                <input type="text" id="AddComments" name="AddComments" class="m-wrap span8" />
                            </div>


                        </div>
                        @*第四行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>Customer:</span>
                               <select id="Customer" name="Customer" class="m-wrap span8">
                                   <option>2</option>
                               </select>
                            </div>
                            <div class="span4 ">
                                <span>Shipping Customer:</span>
                              <select id="ShippingCustomer" name="ShippingCustomer" class="m-wrap span8">
                                  <option>1</option>
                              </select>
                            </div>


                        </div>
                        @*第五行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <span></span>
                                <button id="btnSearch" class="btn btn-default" type="button" value="Search" name="Command">Query</button>
                            </div>
                        </div>
                    </div>
                    <div class="portlet-body" id="Query-Results">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">Seq</th>
                                        <th class="center">Customer</th>
                                        <th class="center">Customer#</th>
                                        <th class="center">CustomerName</th>
                                        <th class="center">Contact</th>
                                        <th class="center">Telephone</th>
                                        <th class="center"></th>
                                    </tr>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                        <div class="row-fluid">

                            <div class="span4">
                                <div class="mypage">
                                    <ul>
                                        <li id="PageIndex"><<</li>
                                        <li id="Pageup"><</li>
                                        <li><input type="text" id="nowpage" value="1" /></li>
                                        <li>/</li>
                                        <li><i id="TotalPageCount">0</i></li>
                                        <li id="Pagewown">></li>
                                        <li id="PageLast">>></li>
                                        <li id="PageGO">GO</li>
                                        <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                    </ul>
                                </div>

                            </div>
                            @*导出Excel*@
                            <div class="span4">
                                <button class="btn" type="submit" formaction="/Maintain/AccountExportExecl" id="btnExcel" name="btnExcel" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;">Export to Excel<i class="m-icon-swapright m-icon-white"></i></button>
                            </div>


                        </div>
                    </div>
                    <div id="EditInfor">
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <span>下单客户代号:</span>
                                <input type="text" id="txtCutomerCode" name="txtCutomerCode" class="m-wrap span8" />
                            </div>
                            <div class="span4">
                                <span>开票客户代号:</span>
                                <input type="text" id="txtkaipaioCustCode" name="txtkaipaioCustCode" class="m-wrap span8" />
                            </div>
                            <div class="span4">
                                出口单<input class="m-wrap span4" id="ckexportbill" name="ckexportbill" type="checkbox" value="true">急单<input class="m-wrap span4" id="ckUrgent_Order" name="ckUrgent_Order" type="checkbox" value="true">
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>结账方式:</span>
                                <select id="ddlPayType" name="ddlPayType" class="m-wrap span8">
                                    <option value="">1</option>
                                </select>
                            </div>
                            <div class="span4 ">
                                <span>其他费用:</span>
                                <input type="text" id="txtfreight" name="txtfreight" class="m-wrap span8" />
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>备注:</span>
                                <textarea id="txtfreight" name="txtfreight" class="m-wrap span8"></textarea>
                            </div>
                            <div class="span4 ">
                                <span>特殊说明:</span>
                                <textarea id="txtexplain" name="txtexplain" class="m-wrap span8"></textarea>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <span>TERM:</span>
                                <select id="txtTERM" name="txtTERM" class="m-wrap span8">
                                    <option value="">1</option>
                                </select>
                            </div>
                            <div class="span4">
                                <span>Payment Terms:</span>
                                <input type="text" id="txtPaymentTerms" name="txtPaymentTerms" class="m-wrap span8" />
                            </div>
                            <div class="span4">
                                <input class="m-wrap span4" id="ckLC" name="ckLC" type="checkbox" value="true">LC
                            </div>
                        </div>
                    </div>
                </div>
             </div>
         </div>
      </div>
</body>
</html>

