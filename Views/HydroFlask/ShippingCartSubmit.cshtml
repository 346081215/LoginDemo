
@{
    ViewBag.Title = "ShippingCartSubmit";
    Layout = null;
}


@RenderPage("~/Views/Shared/PopDiv.cshtml")

<script src="~/Content/js/Popup.js"></script>
<script src="~/scripts/HydroFlask/ShippingCartSubmit.js?V=1"></script>
<div class="row-fluid">
    <div class="span2 span2_hide">

    </div>
    <div class="span4">
        <span>PrintShop:</span>
        <select id="PrintShop" name="PrintShop" class="m-wrap span8"></select>
    </div>
    <div class="span4">
        <span>Shipping TO:</span>
        <select id="ShipTO" name="ShipTO" class="m-wrap span8"></select>
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">

    </div>
    <div class="span4">
        <span>Bill TO#:</span>
        <select id="BillTo" name="BillTo" class="m-wrap span8"></select>
    </div>
    <div class="span4">
        <span>Shipping Address:</span>
        <select id="Shiptoaddress" name="Shiptoaddress" class="m-wrap span8"></select>
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">

    </div>
    <div class="span4">
        <span>Billing Address:</span>
        <textarea id="BillToAddress" name="BillToAddress" readonly="readonly" class="m-wrap span8" style="margin-bottom:10px;resize:none;"></textarea>
    </div>
    <div class="span4">
        <span>Contact:</span>
        <input type="text" id="Contact" name="Contact" readonly="readonly" class="m-wrap span8" />
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">
    </div>
    <div class="span4">
        <span>Currency:</span>
        <input type="text" id="Currency" name="Currency" readonly="readonly" class="m-wrap span8" />
    </div>
    <div class="span4">
        <span>Tel:</span>
        <input id="Tel" name="Tel" readonly="readonly" class="m-wrap span8" />
    </div>
</div>
<div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
    <table id="ShippingCartOrder" class="table table-striped table-bordered table-hover table-full-width dataTable">

        <thead>
            <tr class="head" style="font-size: 12px !important;">
                <th class="center">Seq</th>
                <th class="center" style="text-align:right;">PO　Qty</th>
                <th class="center">UOM</th>
                <th class="center">Series</th>
                <th class="center">Style</th>
                <th class="center">Item NO.</th>
                <th class="center">Color</th>
                <th class="center">Product description</th>
                <th class="center">SKU</th>
                <th class="center">OZ</th>
                <th class="center">BarCode</th>
            </tr>
        </thead>

        <tbody id="NeedOrderNowOrder" class="OrderDetail shoppingcart"></tbody>

    </table>
    <div class="clearfix main_submit">
        <button id="Submit3" class="btn btn-default" type="submit" value="Ordering Now" name="Command">Submit</button>
        <button id="Submit4" class="btn btn-default" type="submit" value="Ordering Now" name="Command">Continue Shopping</button>
        <button id="Submit5" class="btn btn-default" type="submit" value="Ordering Now" name="Command">Cancel</button>
    </div>

</div>                              


    
