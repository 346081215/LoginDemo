

@{
    ViewBag.Title = "OrderQueryForSales";
    Layout = null;
}

<script src="~/Content/js/Popup.js"></script>
<script src="~/scripts/HydroFlask/OrderQueryForSales.js?V=1"></script>
@using (Html.BeginForm())
{
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">Order Tracking</em>
                        <em class="gray-em" id="step2" style="display:none;">Query Results</em>
                        <em class="gray-em" id="step_ViewDetail" style="display:none;">View Detail</em>
                        <em class="gray-em" id="step_ViewArtwork" style="display:none;">View Artwork</em>
                        <em class="gray-em" id="step_ViewShipOrder" style="display:none;">View Shipment</em>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div id="Query-order">
                        <h3 class="form-section" style="text-align:center"></h3>
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">

                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">
                                <span>Vendor:</span>
                                <select id="Vendor" name="Vendor" class="m-wrap span8"></select>
                            </div>
                            <div class="span4 ">
                                <span>PO#:</span>
                                <input type="text" id="txtPO" name="txtPO" class="m-wrap span8" />
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">
                                <span>Print Shop:</span>
                                <select id="PrintShop" name="PrintShop" class="m-wrap span8"></select>
                            </div>
                            <div class="span4 ">
                                <span>Performance:</span>
                                <select id="Performance" name="Performance" class="m-wrap span8"></select>
                            </div>
                        </div>
                        @*第三行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">
                                <span>Maxim OOS NO:</span>
                                <input type="text" id="txtoosorderno" name="txtoosorderno" class="m-wrap span8" />
                            </div>
                            <div class="span4 ">
                                <span> Order Status:</span>
                                <select id="Order_Status" name="Order_Status" class="m-wrap span8"></select>
                            </div>
                        </div>
                        @*第四行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">
                               
                                <span>Received PO Date:</span>
                                        <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitStartTime">  
                            </div>
                            <div class="span4 ">
                                <span>PI:</span>
                                <input type="text" id="txtPI" name="txtPI" class="m-wrap span8" />
                            </div>
                        </div>
                        @*第五行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">

                                <span> </span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitEndTime">
                            </div>
                            <div class="span4 ">
                                <span>SO#:</span>
                                <input type="text" id="SO" name="SO" class="m-wrap span8" />
                            </div>
                        </div>
                        @*Query*@
                        <div class="row-fluid">
                            <p style="text-align:center">
                                <button type="button" id="btnQuery" name="btnQuery" class="btn btn-default" value="Query" style="border: 1px solid #D6D6D6;width: 170px;margin-left:0;">Query</button>
                            </p>
                        </div>
                    </div>
                    @*Table*@
                    <div class="portlet-body" id="Query-Results" style="display:none;">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="Order" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">Seq</th>
                                        <th class="center">PO#</th>
                                        <th class="center">Maxim OOS NO.</th>
                                        <th class="center">Item No.</th>
                                        <th class="center">PO Qty</th>
                                        <th class="center">Performance</th>
                                        <th class="center">Status</th>
                                        <th class="center">Vendor</th>
                                        <th class="center">PI</th>
                                        <th class="center">SO#</th>
                                        <th class="center">Received PO Date</th>
                                        <th class="center">Requested XFD</th>
                                        <th class="center">Estimated XFD</th>
                                        <th class="center">Confirmed XFD</th>
                                        <th class="center">Detail</th>
                                        @*<th class="center">Artwork</th>*@
                                   
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>


                        @*分页*@
                        <div class="row-fluid" id="ExportExcel">

                            <div class="span4">
                                <div class="mypage">
                                    <ul>
                                        <li id="PageIndex"><<</li>
                                        <li id="Pageup"><</li>
                                        <li><input type="text" id="nowpage" value="1" /></li>
                                        <li>/</li>
                                        <li><i id="TotalPageCount">0</i></li>
                                        <li id="Pagewown">></li>
                                        <li id="PageLast">>></li>
                                        <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                        <li id="PageGO">GO</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="span4">
                                <button type="submit" formaction="/HydroFlask/OrderQueryForSalesExportExcel" id="btnExcel" name="btnExcel" class="btn btn-default" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;">Export to Excel<i class="m-icon-swapright m-icon-white"></i></button>
                            </div>
                            @*<div class="span4">
                                <div id="sample_1_length" class="dataTables_length">
                                    <label>
                                        Show
                                        <select size="1" name="sample_1_length" aria-controls="sample_1" class="m-wrap small">
                                            <option value="5" selected="selected">5</option>
                                            <option value="15">15</option>
                                            <option value="20">20</option>
                                            <option value="-1">All</option>
                                        </select> result per page
                                    </label>
                                </div>
                            </div>*@
                        </div>

                    </div>
                    @*ViewDetail*@
                    <div class="portlet-body" id="Results-ViewDetail" style="display:none;">

                    </div>
                    @*ViewArtwork*@
                    <div class="ron" id="Results-ViewArtwork" style="display:none;">

                    </div>
                    @*ViewShipOrder*@
                    <div class="ron" id="Results-ViewShipOrder"  style="display:none;">

                    </div>
                </div>
            </div>
        </div>
    </div>
}
