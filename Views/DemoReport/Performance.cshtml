                $("#_Year").val($(this).val());
            });
            $("#selectMonth").change(function () {
                $("#_Month").val($(this).val());
            });
            $("#selectServicesId").change(function () {
                $("#_Services").val($(this).val());
            });

            $("#btnExcel").click(function () {
                $("form").submit();
            });
            //$("#btnQuery").text("text");


