                var mychart = echarts.init(document.getElementById("Linediv"));
                var option = {
                    // title: { text: 'Processing days' },
                    tooltip: { trigger: 'axis' },
                    legend: { data: ['24 hr service', '48 hr service', '3 working days', '5 working days'] },
