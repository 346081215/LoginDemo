
@{
    ViewBag.Title = "ShoppingCartSubmit";
    Layout = null;
}
<script src="~/scripts/ECI/ShoppingCartSubmit.js"></script>
<div class="row-fluid">    
    <div class="span2 span2_hide">
        <input id="T" name="T" type="hidden" value=@ViewData["T"] />
    </div>
    <div class="span4">
        <span>@ViewData["printshop"]:</span>
        <select id="PrintShop" name="PrintShop" readonly="readonly" class="m-wrap span8"></select>
    </div>
    <div class="span4">
        <span>@ViewData["PONumber"]:</span>
        <input type="text" id="txtPO_" name="txtPO_" readonly="readonly" class="m-wrap span8" />
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">

    </div>
    <div class="span4">
        <span>@ViewData["Billing To"]:</span>
        <select id="BilltoId" name="BilltoId" class="m-wrap span8"></select>
    </div>
    <div class="span4">
        <span>@ViewData["Ship To"]:</span>
        <select id="ShiptoId" name="ShiptoId" class="m-wrap span8"></select>
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">

    </div>
    <div class="span4">
        <span>@ViewData["Billing Address"]:</span>
        <textarea id="BillToAddress" name="BillToAddress" readonly="readonly" class="m-wrap span8" style="margin-bottom:10px;resize:none;"></textarea>
    </div>
    <div class="span4">
        <span>@ViewData["Shipping Address"]:</span>
        <select id="ShipAddress" name="ShipAddress" class="m-wrap span8"></select>

    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">
    </div>
    <div class="span4">
        <span>@ViewData["Contact"]:</span>
        <input type="text" id="BillingAddrContact" name="BillingAddrContact" readonly="readonly" class="m-wrap span8" />
    </div>
    <div class="span4">
        <span>@ViewData["Contact"]:</span>
        <input type="text" id="ShipAddrContact" name="ShipAddrContact" readonly="readonly" class="m-wrap span8" />
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">
    </div>
    <div class="span4">
        <span>@ViewData["Tel"]:</span>
        <input type="text" id="BillingAddrTel" name="BillingAddrTel" readonly="readonly" class="m-wrap span8" />
    </div>
    <div class="span4">
        <span>@ViewData["Tel"]:</span>
        <input type="text" id="ShipAddrTel" name="ShipAddrTel" readonly="readonly" class="m-wrap span8" />
    </div>
</div>
<div class="row-fluid">
    <div class="span2 span2_hide">
    </div>
    <div class="span4">
        <span>@ViewData["Shipment Type"]:</span>
        <input type="text" id="ShipmentType_" name="ShipmentType_" readonly="readonly" class="m-wrap span8" />
    </div>
    <div class="span4">
        <span>@ViewData["Country"]:</span>
        <input type="text" id="ShipAddrCountry" name="ShipAddrCountry" readonly="readonly" class="m-wrap span8" />
    </div>
</div>

