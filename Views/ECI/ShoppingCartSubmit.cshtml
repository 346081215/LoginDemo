<div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
    <table id="ShoppingCartOrder2" class="table table-striped table-bordered table-hover table-full-width dataTable">

        <thead>
            <tr class="head" style="font-size: 12px !important;">
                <th class="center"></th>
                <th class="center" style="text-align:right;">@ViewData["OrderQty"]</th>
                <th class="center" style="width: 400px;">@ViewData["Product Sample"]</th>
                <th class="center">@ViewData["Product"]</th>
                <th class="center">@ViewData["Currency"]</th>
                <th class="center">@ViewData["Unit Price"]</th>
                <th class="center">Size</th>
                <th class="center">@ViewData["UOM"]</th>
                <th class="center">@ViewData["PurchaseUnit"]</th>
            </tr>
        </thead>

        <tbody id="NeedOrderNowOrder" class="OrderDetail shoppingcart"></tbody>
        <tfoot>
            <tr>
                <td>
                    <span id="Label2" style="font-weight:bold;">Total Cost:</span>
                </td>
                <td>
                    <span id="lblTotalCost" style="display:inline-block;border-style:Double;font-weight:bold;width:121px;">￥284</span>
                </td>
            </tr>
        </tfoot>
    </table>
    <div class="clearfix main_submit" style="width: 370px;">
        <button id="Submit3" class="btn btn-default" type="submit" value="Ordering Now" name="Command">@ViewData["Submit"]</button>
        <button id="Submit4" class="btn btn-default" type="submit" value="Ordering Now" name="Command">@ViewData["Continue Shopping"]</button>
        <button id="Submit5" class="btn btn-default" type="submit" value="Ordering Now" name="Command">@ViewData["Cancel"]</button>
    </div>

</div>



