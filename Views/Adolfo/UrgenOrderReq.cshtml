@using Resources
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="~/Content/js/Popup.js"></script>
    <script src="~/scripts/Adolfo/UrgenOrderReq.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>UrgenOrderReq</title>
</head>

<body>
    <input type="text" id="tBrandId" name="tBrandId" value="@ViewBag.BrandId" style="display:none" />
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">@UrgenOrderReq.UrgentOrderRequest</em>
                        <em class="gray-em" id="step2" style="display:none;">@UrgenOrderReq.QueryResults</em>
                        <em class="gray-em" id="step3" style="display:none;">@UrgenOrderReq.UrgentRequest</em>
                    </div>

                </div>
                <div class="portlet-body form">
                    <div id="Query-order">
                        <h3 class="form-section" style="text-align:center"></h3>
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>@UrgenOrderReq.PO:</span>
                                <input type="text" id="POText" name="POText" class="m-wrap span8" />
                            </div>
                            <div class="span4 ">
                                <span>@UrgenOrderReq.Maxim:</span>
                                <input type="text" id="MaximNoText" name="MaximNoText" class="m-wrap span8" />
                            </div>
                        </div>
                        <div class="row-fluid">
                            <p style="text-align:center">
                                @if (ViewBag.BrandId == "ADO001")
                                {
                                    <button type="submit" class="btn" id="Submit1" name="Command" style="border: 1px solid #D6D6D6;width: 170px;margin-left:0;">@UrgenOrderReq.Search</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn" id="Submit1" name="Command" style="border: 1px solid #D6D6D6;width: 170px;margin-left:0;">@UrgenOrderReq.Query</button>
                                }

                            </p>
                        </div>
                    </div>
                    <div class="portlet-body" id="Query-Results" style="display:none;">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="Order" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">@UrgenOrderReq.Seq</th>
                                        <th class="center">@UrgenOrderReq.OrderDate</th>
                                        <th class="center">@UrgenOrderReq.ConfirmDate</th>
                                        <th class="center">@UrgenOrderReq.PO</th>
                                        <th class="center">@UrgenOrderReq.OOSOrderNo</th>
                                        <th class="center">@UrgenOrderReq.PrintShop</th>
                                        <th class="center">@UrgenOrderReq.ServiceLevel</th>
                                        @*<th class="center">Status</th>*@
                                        <th class="center">@UrgenOrderReq.Product</th>
                                        <th class="center">@UrgenOrderReq.OrderQty</th>
                                        <th class="center"></th>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                    </div>
                    <div id="UpdateUrgenOrder" style="display:none;">
                        <input id="OrderText" style="display:none;" />
                        <div id="GridviewSingle" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderSingle" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">@UrgenOrderReq.Seq</th>
                                        <th class="center">@UrgenOrderReq.OrderDate</th>
                                        <th class="center">@UrgenOrderReq.ConfirmDate</th>
                                        <th class="center">@UrgenOrderReq.PO#</th>
                                        <th class="center">@UrgenOrderReq.OOSOrderNo.</th>
                                        <th class="center">@UrgenOrderReq.PrintShop</th>
                                        <th class="center">@UrgenOrderReq.ServiceLevel</th>
                                        @*<th class="center">Status</th>*@
                                        <th class="center">@UrgenOrderReq.Product</th>
                                        <th class="center">@UrgenOrderReq.OrderQty</th>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                        <br />
                        <b style="color:blue;margin-left:25px;">@UrgenOrderReq.PleaseChooseAServiceLevel:</b>
                        <select id="Service" name="Service" style="margin-top: 10px;"></select>
                        @if (ViewBag.BrandId == "ADO001")
                        {
                          <b>@UrgenOrderReq.Notice</b>
                        }
                        <br />
                        <br />
                        <ul class="touch">
                            @if (ViewBag.BrandId == "VOE001" || ViewBag.BrandId == "STB001")
                            {
                                <li><span id="Label6">@UrgenOrderReq.YouCanDirectlyChangetheServiceLevelto</span><span id="spanCanChgLev">3 and 48</span>.</li>
                            }
                            else if (ViewBag.BrandId == "ADO001")
                            {
                                <li><span id="Label6">@UrgenOrderReq.YouCanDirectlyChangetheServiceLevelto</span><span id="spanCanChgLev">3 working days</span></li>
                            }
                            else
                            {
                                <li><span id="Label6">@UrgenOrderReq.YouCanDirectlyChangetheServiceLevelto</span><span id="spanCanChgLev">3 and 48</span></li>
                                <li><span id="Label1">@UrgenOrderReq.follow</span></li>
                            }
                            <li><span>@UrgenOrderReq.Step1</span></li>
                            <li><span>@UrgenOrderReq.Step2</span></li>
                            @if (ViewBag.BrandId=="STB001")
                            {
                                <li><span id="spPSContact">Sara.wang  </span></li>
                                <li><span id="spPSTel">@UrgenOrderReq.Mobile:<span style="color:blue;"> 021-64064228*811</span></span></li>
                                <li><span id="spPSEmail">@UrgenOrderReq.Email: shcs-8@maxim-group.com;  </span></li>
                            }
                            else if (ViewBag.BrandId == "TSC001")
                            {
                            <li><span id="spPSContact">Maggie  </span></li>
                            <li><span id="spPSTel">@UrgenOrderReq.Mobile:<span style="color:blue;"> +86(0)21 64064288 ext.752</span></span></li>
                                <li><span id="spPSEmail">@UrgenOrderReq.Email: tescosales03@maxim-group.com</span></li>
                            }
                            else
                            {
                                <li><span id="spPSContact">Ruth Zhu  </span></li>
                                <li><span id="spPSTel">@UrgenOrderReq.Mobile:<span style="color:blue;"> +86 (0)21 64064228 ext.866</span></span></li>
                                <li><span id="spPSEmail">@UrgenOrderReq.Email: ruth.zhu@maxim-group.com;  </span></li>
                            }

                        </ul>
                        <br />
                        <div class="clearfix main_submit">
                            <button id="Submit3" class="btn btn-default" type="submit" name="Command">@UrgenOrderReq.SubmitAndSendMail</button>
                            <button id="Submit4" class="btn btn-default" type="submit" name="Command">@UrgenOrderReq.Back</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</body>
</html>