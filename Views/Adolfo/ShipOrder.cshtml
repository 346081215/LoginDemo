@using System.Data;
@using Maxim.Model.BaseModel
@model ShipOrderMode
@{
    ViewBag.Title = "ShipOrderMode";
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShipOrder</title>
    <script src="~/scripts/Adolfo/ShipOrder.js"></script>
</head>
<body>
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box" id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step">ShipOrderMode</em>
                        <em class="gray-em" id="step1" style="display:none;">Query Results</em>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div id="Query">
                        <h3 class="form-section" style="text-align:center"></h3>

                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>OrderDateS:</span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" id="dpOrderStartTime">
                            </div>
                            <div class="span4 ">
                                <span>OrderDateE:</span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" id="dpOrderEtartTime">
                            </div>
                            <div class="span4 ">
                                <span>OOS No:</span>
                                <input type="text" id="OOSNo" class="m-wrap span8" />
                            </div>


                        </div>
                        @*第五行Query*@
                        <div class="row-fluid">
                            <p style="text-align:center">
                                <button id="btnQuery" class="btn btn-default" style="border: 1px solid #D6D6D6;width: 170px;margin-left:0;" type="button">Query</button>
                            </p>
                        </div>
                    </div>
                    <div class="portlet-body" id="Query-Results">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th id="selectorHead" ><input type="checkbox" id="ckSelectAll" /></th>
                                        <th class="center">Seq</th>
                                        <th class="center">Order Date</th>
                                        <th class="center">OOS No</th>
                                        <th class="center">Item</th>
                                        <th class="center">Customer</th>
                                        <th class="center">Order Qty</th>
                                        <th class="center">Ship Qty</th>
                                    </tr>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                        <div class="row-fluid">
                            <div class="span4">
                                <div class="mypage">
                                    <ul>
                                        <li id="PageIndex"><<</li>
                                        <li id="Pageup"><</li>
                                        <li><input type="text" id="nowpage" value="1" /></li>
                                        <li>/</li>
                                        <li><i id="TotalPageCount">0</i></li>
                                        <li id="Pagewown">></li>
                                        <li id="PageLast">>></li>
                                        <li id="PageGO">GO</li>
                                        <li><input id="pc" type="hidden" value=1><input id="PageTotalCount" type="hidden" value=1></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="ERPOrderInfor"> 

                        <div class="row-fluid">
                            <div class="span4 ">
                                <span>ShipDate:</span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" id="dpShipOrerDate">
                            </div>
                            <div class="span4 ">
                                <span>ExpressNO</span>
                                <input type="text" id="InExpressNo" class="m-wrap span8" />
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2 span2_hide"></div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2 span2_hide"></div>
                            <div class="span10">
                                <button id="btnShipOrder" class="btn">出货</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
