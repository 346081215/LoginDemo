@using Maxim.Model.BaseModel
@{

    Layout = null;
}
<script src="~/scripts/Adolfo/OrderQuery.js"></script>
<input id="PageView" name="PageView" type="hidden" value="0">
@using (Html.BeginForm("OrderTracking", "Adolfo", FormMethod.Post))

{
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                <div class="portlet-title">

                    <div class="caption">
                        <em class="red-em" id="step1">Order Tracking</em>
                        <em class="gray-em" id="step2" style="display:none;">Query Results</em>
                        <em class="gray-em" id="step_ViewDetail" style="display:none;">View Detail</em>
                        <em class="gray-em" id="step_ViewArtwork" style="display:none;">View Artwork</em>
                        <em class="gray-em" id="step_ViewShipOrder" style="display:none;">View Shipment</em>
                    </div>


                </div>

                <div class="portlet-body form">
                    <div action="#" class="horizontal-form">
                        <div id="Query-order">
                            <h3 class="form-section" style="text-align:center"></h3>
                            @*第一行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>
                                <div class="span4 ">
                                    <span>PrintShop:</span>
                                    <select id="PrintShop" name="PrintShop" class="m-wrap span8"></select>
                                </div>
                                <div class="span4 ">
                                    <span>Category:</span>
                                    <select id="Category" name="Category" class="m-wrap span8"></select>
                                </div>
                            </div>
                            @*第二行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>

                                <div class="span4 ">
                                    <span>Item:</span>
                                    <select id="Item" name="Item" class="m-wrap span8"></select>
                                </div>
                                <div class="span4 ">
                                    <span>Status:</span>
                                    <select id="Order_Status" name="Order_Status" class="m-wrap span8"></select>
                                </div>

                            </div>
                            @*第三行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>
                                <div class="span4 ">
                                    <span>Order Date:</span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitStartTime">
                                </div>

                                <div class="span4 ">
                                    <span>Maxim Order#:</span>
                                    <input type="text" id="OOSNO" name="OOSNO" class="m-wrap span8" />
                                </div>
                            </div>
                            @*第四行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>
                                <div class="span4 ">
                                    <span></span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitEndTime">
                                </div>
                                <div class="span4">
                                    <span>Customer PO#:</span>
                                    <input type="text" id="ADPO" name="ADPO" class="m-wrap span8" />
                                </div>

                            </div>
                            @*第五行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>
                                <div class="span4 ">
                                    <span>Delivery Date:</span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="DeliveryStartTime">
                                </div>
                                <div class="span4 ">
                                    <span>Style Number:</span>
                                    <input type="text" id="StyleNumber" name="StyleNumber" class="m-wrap span8" />
                                </div>
                            </div>
                            @*第六行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>
                                <div class="span4 ">
                                    <span></span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="DeliveryEndTime">
                                </div>
                                <div class="span4">
                                    <span>Vendor Number:</span>
                                    <input type="text" id="VendorNumber" name="VendorNumber" class="m-wrap span8" />
                                </div>
                            </div>
                            @*第七行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">
                                    <div class="control-group">
                                        <label class="control-label" for="firstName"></label>
                                        <div class="controls">
                                        </div>
                                    </div>
                                </div>
                                <div class="span4">
                                    <span>Season:</span>
                                    <input type="text" id="Season" name="Season" class="m-wrap span8" />
                                </div>
                            </div>
                            @*Query*@
                            <div class="row-fluid">
                                <p style="text-align:center"><button type="button" class="btn" id="btnQuery" style="border: 1px solid #D6D6D6;width: 170px;margin-left:0;">Query</button></p>
                            </div>
                        </div>
                        @*Table*@
                        <div class="portlet-body" id="Query-Results">
                            <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                                <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="Order" aria-describedby="sample_2_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Seq</th>
                                            <th>Order Date</th>

                                            <th>Brand Name</th>
                                            <th>Print Shop</th>
                                            <th>Maxim order#</th>
                                            <th>Customer PO#</th>
                                            <th>Style number</th>
                                            <th>Vendor number</th>
                                            <th>Season</th>
                                            <th>Add Comments</th>
                                            <th>Item</th>
                                            <th>Order Qty</th>
                                            @*<th class="center">Service Level</th>*@
                                            <th>Performance</th>
                                            <th>ERP NO</th>
                                            <th>View Detail</th>
                                            <th>Artwork</th>
                                            <th>Delivery Date</th>
                                            <th>AWB #/POD</th>


                                            @*<th>Order No.</th><th>Status</th>
                                                <th>Department Code</th>*@


                                    </thead>



                                    <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                                </table>

                            </div>
                            @*分页*@
                            <div class="row-fluid">

                                <div class="span4">
                                    <div class="mypage">
                                        <ul>
                                            <li id="PageIndex"><<</li>
                                            <li id="Pageup"><</li>
                                            <li><input type="text" id="nowpage" value="1" /></li>
                                            <li>/</li>
                                            <li><i id="TotalPageCount">60</i></li>
                                            <li id="Pagewown">></li>
                                            <li id="PageLast">>></li>
                                            <li id="PageGO">GO</li>
                                            <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                        </ul>
                                    </div>

                                </div>
                                @*导出Excel*@
                                <div class="span4">
                                    <button class="btn" type="submit" formaction="/Adolfo/OrderTrackingExportExcel" id="btnExcel" name="btnExcel" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;">Export to Excel<i class="m-icon-swapright m-icon-white"></i></button>
                                    @*<button type="button" class="btn" id="btnQuery" style="border: 1px solid #D6D6D6;width: 170px;margin-left: -14%;">Apply Filters</button>*@
                                </div>


                            </div>

                        </div>
                        @*ViewDetail*@
                        <div class="portlet-body" id="Results-ViewDetail" style="display:none;">

                        </div>
                        @*ViewArtwork*@
                        <div class="portlet-bodys" id="Results-ViewArtwork" style="display:none;">

                        </div>
                        @*Results-ViewShipOrder*@
                        <div class="portlet-bodys" id="Results-ViewShipOrder" style="display:none;">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
