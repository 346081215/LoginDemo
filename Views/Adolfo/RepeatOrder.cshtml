                                                </div>
                                            </div>
                                        </div>

                                    </div>*@
                            </div>

                            @*第四行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">

                                    <div class="control-group">

                                        <label class="control-label" for="firstName"></label>

                                        <div class="controls">
                                        </div>

                                    </div>

                                </div>
                                @*@if (Model.RoleGroupName.ToLower().Contains("brand"))
