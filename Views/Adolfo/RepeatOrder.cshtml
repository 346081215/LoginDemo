                                        <div class="span4 ">
                                            <span>Order Status:</span>
                                            <select class="m-wrap span8">
                                                <option>等待品牌商确认订单</option>
                                            </select>
                                        </div>
                                    }*@


                                @*@if (ViewBag._func == "repeatconfirm")
                                {
                                    <div class="span4 ">
                                        <span>Order Status:</span>
                                        <select class="m-wrap span8">
                                            <option>等待品牌商确认订单</option>
