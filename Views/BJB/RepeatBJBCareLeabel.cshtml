@using Maxim.Model.BaseModel
@model BaseDataBindModel
@{
    ViewBag.Title = "RepeatBJBCareLeabel";
    Layout = null;
}

<script type="text/javascript" src="~/scripts/BJB/RepeatBJBCareLeabel.js"></script>
@using (Html.BeginForm("RepeatBJBCareLeabel", "Maxim", FormMethod.Post))
{
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">RepeatOrders</em>
                        <em class="gray-em" id="step2" style="display:none;">QueryResults</em>
                        <em class="gray-em" id="step_ViewDetail" style="display:none;">ViewDetail</em>
                        <em class="gray-em" id="step_ViewArtwork" style="display:none;">ViewArtwork</em>
                        <em class="gray-em" id="step_ViewShipOrder" style="display:none;">ViewShipment</em>
                        <em class="gray-em" id="step_ViewCopyOrder" style="display:none;">ViewCopyOrder</em>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div action="#" class="horizontal-form">
                        <div id="Query-order">
                            <h3 class="form-section" style="text-align:center"></h3>
                            @*第一行*@ 
                            <div class="row-fluid">
                                <div class="span2 span2_hide">

                                    <div class="control-group">

                                        <label class="control-label" for="firstName"></label>

                                        <div class="controls">
                                        </div>

                                    </div>

                                </div>
                                <div class="span4 ">
                                    <span>PrintShop:</span>
                                    @*@Html.DropDownListFor(x => x.PSID, Model.PSlist, new { @class = "m-wrap span8" })*@
                                    <select id="PSIDs" name="PSIDs" class="m-wrap span8">
                                        @foreach (SelectListItem item in Model.PSlist)
                                        {
                                            if (item.Disabled)
                                            {
                                                <option disabled="disabled" value="@item.Value">@item.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Value" style="color:black;font-weight:bold">@item.Text</option>
                                            }
                                        }
                                    </select>

                                </div>
                                <div class="span4 ">
                                    <span>Category:</span>
                                    @Html.DropDownListFor(x => x.CategoryId, Model.CategoryList, new { @class = "m-wrap span8" })
                                </div>
                            </div>
                            @*第二行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">

                                    <div class="control-group">

                                        <label class="control-label" for="firstName"></label>

                                        <div class="controls">
                                        </div>

                                    </div>

                                </div>
                                <div class="span4 ">
                                    <span>Item:</span>
                                    @Html.DropDownListFor(x => x.productids, Model.ProductList, new { @class = "m-wrap span8" })
                                </div>
                                <div class="span4 ">
                                    <span>Maxim:</span>
                                    <input class="m-wrap span8" id="OOSOrderno" name="OOSOrderno" type="text" value="">
                                </div>
                            </div>

                            @*第四行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">

                                    <div class="control-group">

                                        <label class="control-label" for="firstName"></label>

                                        <div class="controls">
                                        </div>

                                    </div>

                                </div>
                                <div class="span4 ">
                                    <span>CustomerPO:</span>
                                    <input class="m-wrap span8" id="CustOrderNO" name="CustOrderNO" type="text" value="">
                                </div>
                            </div>
                            @*第五行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">

                                    <div class="control-group">

                                        <label class="control-label" for="firstName"></label>

                                        <div class="controls">
                                        </div>

                                    </div>

                                </div>
                                <div class="span4 ">
                                    <span>ConfirmDate:</span>
                                    <input class="m-wrap m-ctrl-medium date-picker  m-wrap span8" size="16" type="text" value="" name="SubmitStartTime" placeholder="ConfirmStartTime">
                                </div>
                                <div class="span4 ">
                                    <span>DeliveryDate:</span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="DeliveryStartTime" placeholder="DeliveryStartTime">
                                </div>


                            </div>
                            @*第六行*@
                            <div class="row-fluid">
                                <div class="span2 span2_hide">

                                    <div class="control-group">

                                        <label class="control-label" for="firstName"></label>

                                        <div class="controls">
                                        </div>

                                    </div>

                                </div>
                                <div class="span4 ">
                                    <span></span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitEndTime" placeholder="ConfirmEndTime">
                                </div>
                                <div class="span4 ">
                                    <span></span>
                                    <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="DeliveryEndTime" placeholder="DeliveryEndTime">
                                </div>

                            </div>
                            @if (Model.VendorList.Count > 1)
                            {
                                <div class="row-fluid">
                                    <div class="span2 span2_hide">

                                        <div class="control-group">

                                            <label class="control-label" for="firstName"></label>

                                            <div class="controls">
                                            </div>

                                        </div>

                                    </div>
                                    <div class="span4 ">
                                        <span>Vendor:</span>
                                        @Html.DropDownListFor(x => x.VendorID, Model.VendorList, new { @class = "m-wrap span8" })
                                    </div>
                                </div>
                                /**/
                            }


                            @*Query*@
                            <div class="row-fluid">
                                <div class="span4">
                                </div>
                                <div class="span4">
                                   <button type="button" class="btn" id="btnQuery">Query</button>
                                </div>
                                <div class="span4">
                                </div>
                            </div>
                        </div>
                        @*Table*@
                        <div class="portlet-body" id="Query-Results" style="display:none;">
                            <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                                <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="Order" aria-describedby="sample_2_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="center">Seq</th>
                                            <th class="center">ConfirmDate</th>
                                            <th class="center">PrintShop</th>
                                            <th class="center">Brand</th>
                                            <th class="center">Vendor</th>
                                            <th class="center">VendorName</th>
                                            <th class="center">SubcontractSupplier</th>
                                            <th class="center">Customer PO#</th>
                                            <th class="center">AddComments</th>
                                            <th class="center">Maxim</th>
                                            <th class="center">Item</th>
                                            <th class="center">Currency</th>
                                            <th class="center" style="text-align: right;">OrderQty</th>
                                            <th class="center">Status</th>
                                            <th class="center">Payment</th>
                                            <th class="center">PaymentDate</th>
                                            <th class="center">ViewDetail</th>
                                            <th class="center">DeliveryDate</th>
                                            <th class="center">AWBPOD</th>
                                            <th class="center"></th>
                                    </thead>



                                    <tbody role="alert" aria-live="polite" aria-relevant="all"></tbody>
                                </table>

                            </div>
                            @*分页*@
                            <div class="row-fluid">

                                <div class="span4">
                                    <div class="mypage">
                                        <ul>
                                            <li id="PageIndex"><<</li>
                                            <li id="Pageup"><</li>
                                            <li><input type="text" id="nowpage" value="1" /></li>
                                            <li>/</li>
                                            <li><i id="TotalPageCount">1</i></li>
                                            <li id="Pagewown">></li>
                                            <li id="PageLast">>></li>
                                            <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                            <li id="PageGO">GO</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                        </div>
                        @*ViewDetail*@
                        <div class="portlet-body" id="Results-ViewDetail" style="display:none;">

                        </div>
                        @*ViewArtwork*@
                        <div class="portlet-bodys" id="Results-ViewArtwork" style="display:none;">
                            <div id='Gridview' class='dataTables_wrapper form-inline' role='grid'>
                                <table class='table table-striped table-bordered table-hover table-full-width dataTable' aria-describedby='sample_2_info'>
                                    <thead>
                                        <tr>
                                            <th class=center>Seq</th>
                                            <th class=center>Item</th>
                                            <th class=center>OriOrderQty</th>
                                            <th class=center>OrderQty</th>
                                            <th class=center>ArtWork</th>
                                        </tr>
                                    </thead>
                                    <tbody id='Adcakesbase' class='OrderDetail'></tbody>
                                </table>
                            </div>
                        </div>
                        @*ViewShipOrder*@
                        <div class="portlet-bodys" id="Results-ViewShipOrder" style="display:none;">

                        </div>
                        @*ViewCopyOrder*@
                        <div class="portlet-bodys" id="Results-CopyOrder" style="display:none;">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



