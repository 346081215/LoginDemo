@using System.Data;
@{
    Layout = null;
}
<script src="~/scripts/Maintain/ProductTplQuery.js"></script>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box " id="form_wizard_1">
            @*<div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">ProductQuery</em>
                        <em class="red-em" id="step2">Query-Results</em>
                    </div>
                </div>*@
            <div class="portlet-body form">
                <div class="portlet-body" id="ProductTplQuery-Results" style="display:block;">
                    <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                        <span>OrderDataRecord ：</span>
                        <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                            <thead>
                                <tr role="row">
                                    <th class="center">DataRecordId</th>
                                    <th class="center">OOS_DataName</th>
                                    <th class="center">MaximNO</th>
                                    <th class="center">WorkOrderNO</th>
                                    <th class="center">ProductItemNO</th>
                                    <th class="center">ShipmentNO</th>
                                    <th class="center">BrandId</th>
                                    <th class="center">OOS_Note1</th>
                                    <th class="center">OOS_note2</th>
                                    <th class="center">CreatedOn</th>
                                    <th class="center">CreatedBy</th>
                                    <th class="center">ModifiedOn</th>
                                    <th class="center">ModifiedBy</th>
                                </tr>
                            </thead>
                            <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all">
                                @{
                                    var data = ViewData["OrderDataRecord"] as DataTable;

                                    if (data.Rows.Count > 0)
                                    {

                                        for (int i = 0; i < data.Rows.Count; i++)
                                        {
                                            <tr>
                                                @for (int j = 0; j < data.Columns.Count; j++)
                                                {
                                                    <td class="center">@data.Rows[i][j]</td>
                                                }

                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>








                    </div>


                </div>
                <div id="ProductTplEditView" style="display:none"></div>


            </div>
        </div>
    </div>
</div>