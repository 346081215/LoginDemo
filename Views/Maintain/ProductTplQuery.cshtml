            <div class="portlet-body form">
                <div id="ProductTplQuery">
                    <h3 class="form-section" style="text-align:center"></h3>
                    hfProductCode:<input type="text" id="hfProductCode" name="hfProductCode" value="" />
                    <input type="button" class="btn" id="btnAddProductTpl" value="Add New" />　
                    <input type="button" class="btn" id="btnProductTplQueryBack" value="Back" />　
                    <button class="btn" type="submit" formaction="/Maintain/ProductQueryToExecl" id="btnExcel" name="btnExcel" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;display:none;">Export to Excel<i class="m-icon-swapright m-icon-white"></i></button>
                </div>
                <div class="portlet-body" id="ProductTplQuery-Results" style="display:block;">
                    <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                            <thead>
                                <tr role="row">
                                    <th class="center">模版名称</th>
                                    <th class="center">创建时间</th>
                                    <th class="center">创建人</th>
                                    <th class="center">修改时间</th>
                                    <th class="center">修改人</th>
                                    <th class="center"></th>
                                </tr>
                            </thead>
                            <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all">
                               
                                @{ 

                                        var data = ViewData["dt"] as DataTable;

                                        if (data.Rows.Count > 0)
                                        {
                                            @*<tr>
                                                    @for (int i = 0; i < data.Columns.Count; i++)
                                                    {
                                                        <th>@data.Columns[i].ColumnName</th>
                                                    }
                                             </tr>*@
                                            for (int i = 0; i < data.Rows.Count; i++)
                                            {
                                                <tr>
                                                    @for (int j = 1; j < data.Columns.Count; j++)
                                                    {
                                                        <td class="center">@data.Rows[i][j]</td>
                                                    }
                                                    @if (data.Rows[i]["ProductCode"].ToString() != "")
                                                    {
                                                        <td><input type="button" class="btn" onclick="ProductTplEditPageLoad(this)" value="编辑" ProductTplCode="@data.Rows[i]["ProductTplCode"]" /></td>
                                                    }
                                                </tr>
                                             }
                                         }
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="ProductTplEditView" style="display:none"></div>


            </div>
        </div>
    </div>
</div>