@using System.Data;
@{
    ViewBag.Title = "GetRoleBaseView";
    Layout = null;
}
<!DOCTYPE html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetRoleBaseView</title>
    <script src="~/scripts/Roseztree/jquery-1.7.2.min.js"></script>
    <script src="~/scripts/Roseztree/jquery.ztree.core-3.5.js"></script>
    <script src="~/scripts/Roseztree/jquery.ztree.excheck-3.5.min.js"></script>
    <script src="~/scripts/Maintain/GetRoleBaseView.js"></script>
    <link href="~/Content/css/zTreeStyle/zTreeStyle.css" rel="stylesheet" />
</head>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box " id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <em class="red-em" id="step1">Role Maintain</em>
                </div>
            </div>
            <div class="portlet-body form">
                <button type="button" id="AddRole" name="AddRole" class="btn btn-default" onclick="NewRole(this);">New Role</button>
                <button type="button" id="AddRoleGroup" name="AddRoleGroup" class="btn btn-default" onclick="NewRoleGroup(this);">New RoleGroup</button>
                <div class="row-fluid" id="Head">
                    <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                        <table id="HideSysuserInfo" class="table table-striped table-bordered table-hover table-full-width dataTable" aria-describedby="sample_2_info">
                            <thead>
                                <tr>
                                    <th>角色名</th>
                                    <th>角色组名</th>
                                    <th>操作 </th>
                                </tr>
                            </thead>
                            <tbody id="SysuserInfo"></tbody>
                        </table>
                    </div>
                    <div id="ShowZtreeNodes" style="display:none;">
                        <div class="zTreeDemoBackground left">
                            <ul id="treeDemo" class="ztree"></ul>
                        </div>
                        <div>
                            <button type="button" class="btn" id="SubmitRose" name="SubmitRose">Submit</button>
                            <input type="hidden" id="hfHasDo" value="no" />
                            <button class="btn" id="cancel">Cancel</button>
                        </div>
                    </div>
                </div>
                <div id="Query" style="display:none;">
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>Role Name:</span>
                            <input type="text" id="RoleName" name="RoleName" class="m-wrap span8">
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>RoleGroup Code:</span>
                            <select id="RoleGroupCode" name="RoleGroupCode" class="m-wrap span8"></select>
                        </div>
                        @*<button type="button" id="QueryRT" name="QueryRT">Query</button>*@
                    </div>
                    <div class="row-fluid">
                        <div class="span3 span2_hide">
                        </div>
                        <div class="span3">
                            <button type="button" id="Save" name="Save" class="btn btn-default" onclick="SaveEditRole(this);">Save</button>
                            <button type="button" id="Return" name="Return" class="btn btn-default">Return</button>
                        </div>
                    </div>
                </div>
                <div id="Query-order" style="display:none;">
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>Role Name:</span>
                            <input type="text" id="NewRoleName" name="NewRoleName" class="m-wrap span8">
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>RoleGroup Code:</span>
                            <select id="NewRoleGroupCode" name="NewRoleGroupCode" class="m-wrap span8"></select>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3 span2_hide">
                        </div>
                        <div class="span3">
                            <button type="button" id="AddSave" name="AddSave" class="btn btn-default" onclick="SaveNewRole(this);">Save</button>
                            <button type="button" id="ReturnRT" name="ReturnRT" class="btn btn-default">Return</button>
                        </div>
                    </div>
                </div>
                <div id="EditInfor" style="display:none;">
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>RoleGroup Name:</span>
                            <input type="text" id="NewRoleGroupName" name="NewRoleGroupName" class="m-wrap span8">
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span3 span2_hide">
                        </div>
                        <div class="span3">
                            <button type="button" id="AddSaveGroupName" name="AddSaveGroupName" class="btn btn-default" onclick="SaveNewRoleGroup(this);">Save</button>
                            <button type="button" id="ReturnGN" name="ReturnGN" class="btn btn-default">Return</button>
                        </div>
                    </div>
                </div>
            </div>
          </div>
      </div>
</div>

             
                
                
                

