@using System.Data;
@using Maxim.Model.BaseModel
@model BrandPrintShop
@{
    ViewBag.Title = "Brand_PrintShop";
    Layout = null;
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Brand_PrintShop</title>
    <script src="~/scripts/Maintain/BrandPrintShop.js"></script>

</head>
@using (Html.BeginForm())
{
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                                <em class="red-em" id="step1">Brand PrintShops</em>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div id="Query">
                        <h3 class="form-section" style="text-align:center"></h3>
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>Brand:</span>
                                @Html.DropDownListFor(x => x.BrandId, Model.BrandList, new { @class = "m-wrap span8" })
                            </div>
                            <div class="span4">
                                <span></span>
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span></span>
                                <button id="btnSearch"  name="btnSearch" class="btn btn-default" type="button" value="Search">Search</button>
                                <button id="AddNewPrintShop" name="AddNewPrintShop"  class="btn btn-default" type="button" value="AddNewPrintShop" onclick="return NewPrintShop(this);">AddPrintShop</button>
                            </div>
                            <div class="span4 ">

                            </div>
                        </div>

                    </div>
                    <div class="portlet-body" id="Query-Results" style="display:none;">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">Seq</th>
                                        <th class="center">PrintShop ID</th>
                                        <th class="center">Print Shop</th>
                                        <th class="center"></th>
                                    </tr>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                        <div class="row-fluid">

                            <div class="span4">
                                <div class="mypage">
                                    <ul>
                                        <li id="PageIndex"><<</li>
                                        <li id="Pageup"><</li>
                                        <li><input type="text" id="nowpage" value="1" /></li>
                                        <li>/</li>
                                        <li><i id="TotalPageCount">0</i></li>
                                        <li id="Pagewown">></li>
                                        <li id="PageLast">>></li>
                                        <li id="PageGO">GO</li>
                                        <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                    </ul>
                                </div>

                            </div>
                            @*导出Excel*@
                            <div class="span4">
                                <button class="btn" type="submit" formaction="/Maintain/BrandPrintShopExcel" id="btnExcel" name="btnExcel" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;">Export to Excel<i class="m-icon-swapright m-icon-white"></i></button>
                            </div>


                        </div>
                    </div>
                    <div id="EditInfor" style="display:none;">
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4">
                                <span>Print Shop:</span>
                                <select id="EditPrintShop" name="EditPrintShop" class="m-wrap span8"></select>
                            </div>
                            <div class="span4">

                            </div>
                        </div>
                        <div class="row-fluid" id="Save">
                            <div class="span3 span2_hide">
                            </div>
                            <div class="span3">
                                <button type="button" id="EditPrntShop" name="EditPrntShop" class="btn btn-default" value="Query" onclick="return AddPrintShop(this);">Save</button>
                                <button type="button" id="Return" name="Return" class="btn btn-default" value="Query">Return</button>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}


