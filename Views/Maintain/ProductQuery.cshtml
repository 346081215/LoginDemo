@using System.Data;
@using Maxim.Model.BaseModel;
@model ProductQuery

@{
    ViewBag.Title = "ProductQuery";
    Layout = null;
}
@*<script src="~/scripts/Maintain/"></script>*@
<script src="~/scripts/Maintain/ProductQuery.js"></script>
@using (Html.BeginForm())
{
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box " id="form_wizard_1">
            <div class="portlet-title">
                <div class="caption">
                    <em class="red-em" id="step1">ProductQuery</em>
                    <em class="red-em" id="step2"style="display:none">Query-Results</em>
                    <em class="red-em" id="step3" style="display:none">ProductEdit</em>
                    <em class="red-em" id="step4" style="display:none">ProductTplEdit</em>
                </div>
            </div>
            <div class="portlet-body form">

                <div id="Query">
                    <h3 class="form-section" style="text-align:center"></h3>
                    @*第一行*@
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>Brand:</span>
                            @Html.DropDownListFor(x => x.Brandid, Model.BrandList, new { @class = "m-wrap span8" })
                        </div>
                        <div class="span4 ">
                            <span>美声产品种类:</span>
                            @Html.DropDownListFor(x => x.MaximProdCate, Model.MaximProdCateList, new { @class = "m-wrap span8" })
                        </div>
                    </div>
                    @*第二行*@
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                           <span>客户产品编号:</span>
                            <input type="text" id="ProductCustNO" name="ProductCustNO" class="m-wrap span8">
                        </div>
                        <div class="span4 ">
                            <span>ERPNO料号:</span>
                            <input type="text" id="ProductERPNO" name="ProductERPNO" class="m-wrap span8">
                            
                        </div>

                    </div>
                    @*第三行*@
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span>使用状态:</span>
                          @Html.DropDownListFor(x => x._Productstatus, Model.Productstatus, new { @id= "Productstatus", @class = "m-wrap span8" })
                        </div>
                        <div class="span4 ">
                          

                        </div>

                    </div>
                    @*第四行*@
                    <div class="row-fluid">
                        <div class="span2 span2_hide">
                            <div class="control-group">
                                <label class="control-label" for="firstName"></label>
                                <div class="controls">
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <span></span>
                            <button id="btnSearch" class="btn btn-default" type="button" value="Search" name="Command">Search</button>
                            <button type="button" id="btnAddProduct" name="btnAddProduct" class="btn btn-default"value="">Add New</button>
                        </div>
                        <div class="span4 ">

                        </div>
                    </div>
                    <span></span>

                </div>
                <div class="portlet-body" id="Query-Results" style="display:none;">
                    <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                            <thead>
                                <tr role="row">
                                    <th class="center">Seq</th>
                                    <th class="center">ProductCode</th>
                                    <th class="center">客户产品编号</th>
                                    <th class="center">ERPNO料号</th>
                                    <th class="center">美声客户产品种类</th>
                                    <th class="center">半成品料号</th>
                                    <th class="center">FormatName</th>
                                    <th class="center">Service Level</th>
                                    <th class="center">使用状态</th>
                                    <th class="center"></th>
                                    @*<th class="center"></th>*@
                                    <th class="center"></th>
                                </tr>
                            </thead>
                            <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                        </table>
                    </div>
                    <div class="row-fluid">

                        <div class="span4">
                            <div class="mypage">
                                <ul>
                                    <li id="PageIndex"><<</li>
                                    <li id="Pageup"><</li>
                                    <li><input type="text" id="nowpage" value="1" /></li>
                                    <li>/</li>
                                    <li><i id="TotalPageCount">0</i></li>
                                    <li id="Pagewown">></li>
                                    <li id="PageLast">>></li>
                                    <li id="PageGO">GO</li>
                                    <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                </ul>
                            </div>

                        </div>
                        @*导出Excel*@
                        <div class="span4">
                            <button class="btn" type="submit" formaction="/Maintain/ProductExportExcel" id="btnExcel" name="btnExcel" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;">Export to Excel<i class="m-icon-swapright m-icon-white"></i></button>
                        </div>


                    </div>
                </div>
                <div id="ProductEditView" class="portlet-body" style="display:none;"></div>
               <div id="ProductTplQueryView" class="portlet-body" style="display:none"></div>
                <div id="ProductTplEditView" class="portlet-body" style="display:none;"></div>
                
            </div>
        </div>
    </div>
</div>
}


