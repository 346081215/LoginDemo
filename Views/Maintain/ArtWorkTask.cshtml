@using System.Data;
@{
    ViewBag.Title = "ArtWorkTask";
    Layout = null;
}
<script src="~/scripts/Maintain/ArtWorkTask.js"></script>  
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box " id="xm">
            <div class="portlet-title">
                <div class="caption">
                    <em class="red-em" id="step1">ArtWorkTask</em>
                    <em class="red-em" id="step2" style="display:none">XmlData</em>
                    <em class="red-em" id="step3" style="display:none">ViewLog</em>
                    <em class="red-em" id="step4" style="display:none">Carelabel</em>
                </div>
            </div>
        </div> 
    </div>
    @*条件查询文本框*@
    <div id="Query-order">
        OrderNo:<input type="text" id="orderNo" />
        @*产品名称下拉框*@
        ProductName:
        <select id="productName">
            <option value="">--All--</option>
            @foreach (var item in ViewBag.ProductList)
            {
                <option>@item</option>
            }
        </select>
        @*时间文本框*@
        StartTime:<input type="text" id="dateStart" />
        @*状态下拉框*@
        Status:
        <select id="status">
            <option value="">--All--</option>
            <option value="0">WaitTodo</option>
            <option value="1">Running</option>
            <option value="2">ImageGenerated</option>
            <option value="3">Completed</option>
            <option value="4,5,6">Error</option>
        </select>
        <div>
            <button type=button id=btnQuery class=btn btn-default >查询</button><button type=button id=btnToCare class=btn btn-default onclick="funbtnToCare()">转到查询洗标</button>
        </div>
       
    </div>
    
    </div>
@* 数据显示的字段 *@
    <div id="Query-Results">
        @*绑定显示字段*@
        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
            <table id="task2" class="table table-striped table-bordered table-hover table-full-width dataTable" aria-describedby="sample_2_info">
                <thead>
                    <tr class="head">
                        <th class="center">Seq</th>
                        <th class="center" >OrderNo</th>
                        <th class="center" >ProductName</th>
                        <th class="center">XmlData</th>
                        <th class="center">StartTime</th>
                        <th class="center">Status</th>
                        <th class="center">ArtworkPath</th>
                        <th class="center">Log</th>
                    </tr>
                </thead>
                <tbody class="OrderDetail"></tbody>
            </table>
            @*分页*@
            <div class="row-fluid" style="display:none" id="pag">
                <div class="span4">
                    <div class="mypage">
                        <ul>
                            <li id="PageIndex"><<</li>
                            <li id="Pageup"><</li>
                            <li><input type="text" id="nowpage" value="1" /></li>
                            <li>/</li>
                            <li><i id="TotalPageCount">0</i></li>
                            <li id="Pagewown">></li>
                            <li id="PageLast">>></li>
                            <li id="PageGO">GO</li>
                            <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                        </ul>
                    </div>
                </div>
            </div>
           
    </div>
</div>
<div class="portlet-body" id="Results-ViewDetail" style="display:none;">
</div>
<div id="CareLabel" style="display:none;">
    <div id="Query-order">
        OrderNo:<input type="text" id="CareNo" />
        <div>
            <button type=button id=btnCareQuery class=btn btn-default onclick="funbtnCareQuery()">查询</button>
        </div>
    </div>
    <div id="Careview" class="dataTables_wrapper form-inline" role="grid">
        <table id="CareTable" class="table table-striped table-bordered table-hover table-full-width dataTable" aria-describedby="sample_2_info">
            <thead class="head">
                <tr>
                    <th class="center">Seq</th>
                    <th class="center">OrderNo</th>
                    <th class="center">Status</th>
                    <th class="center">Description</th>
                </tr>
            </thead>
            <tbody id="CareDetail" class="CareDetail"></tbody>
        </table>

    </div>
</div>



