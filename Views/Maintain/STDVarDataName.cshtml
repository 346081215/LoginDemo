@using Maxim.Model.BaseModel
@model STDVarDataName_Model
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>STDVarDataName</title>
    @*<script src="~/scripts/jquery-1.10.2.min.js"></script>*@
    <script src="~/scripts/Maintain/STDVarDataNameJS.js"></script>
    <style type="text/css">
        #Code_Table {
            border: 1px solid black;
        }

        .center {
            border: 1px solid black;
        }
    </style>

</head>
<body>
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                @*页眉*@
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">临时订单标准变量设定表</em>
                    </div>
                </div>

                @*页面*@
                <div class="portlet-body form">
                    @*条件*@
                    <div id="Query">
                        <h3 class="form-section" style="text-align:center"></h3>
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>BrandType:</span>
                                @Html.DropDownListFor(x => x.BrandType, Model.BrandTypeList, new { @class = "m-wrap span8" })
                            </div>
                            <div class="span4 ">
                                <span>FormatId:</span>
                                @Html.DropDownListFor(x => x.FormatId, Model.FormatIdlist, new { @class = "m-wrap span8" })
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span></span>
                                <input type="button" id="btn_Select" name="=btn_Select" class="btn btn-default" value="Search" style="width:80px;height:35px;margin-left:10px;" />
                                <input type="button" id="btn_Add" name="=btn_Add" class="btn btn-default" value="Add" style="width:80px;height:35px;" />
                                @*<button id="btnSearch" class="btn btn-default" type="button" value="Search" name="btnSearch">Search</button>*@
                            </div>
                        </div>
                    </div>

                    @*查询*@
                    <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                        <div id="Code">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="Code_Table" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">DetailSYSName</th>
                                        <th class="center">DetailENName</th>
                                        <th class="center">操作</th>
                                    </tr>
                                </thead>

                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                    </div>

                    @* 分页 *@
                    <div class="row-fluid" id="paging">
                        <div class="span4">
                            <div class="mypage">
                                <ul>
                                    <li id="PageIndex"><<</li>
                                    <li id="Pageup"><</li>
                                    <li><input type="text" id="nowpage" value="1" /></li>
                                    <li>/</li>
                                    <li><i id="TotalPageCount">0</i></li>
                                    <li id="Pagewown">></li>
                                    <li id="PageLast">>></li>
                                    <li id="PageGO">GO</li>
                                    <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                    @*<li><button type="button" id="CreateNewAccount" name="CreateNewAccount" class="btn btn-default" onclick="funAdd();">Create</button></li>*@
                                </ul>
                            </div>
                        </div>
                    </div>

                    @*添加*@
                    <div id="InsertCountry" class="row-fluid" style="display:none;">
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>BrandType:</span>
                                @Html.DropDownListFor(x => x.BrandTypeAdd, Model.BrandTypeList, new { @class = "m-wrap span8" })
                            </div>
                            <div class="span4 ">
                                <span>FormatId:</span>
                                @Html.DropDownListFor(x => x.FormatIdAdd, Model.FormatIdlist, new { @class = "m-wrap span8" })
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span></span>
                                <input type="button" id="Stock_Add" name="=Stock_Add" class="btn btn-default" value="Save" style="width:80px;height:35px;float:left;margin-left:30px;" />
                                <input type="button" id="Stock_Cancel" name="=Stock_Cancel" class="btn btn-default" value="Cancel" style="width:80px;height:35px;float:left;" />
                            </div>
                        </div>
                    </div>

                    @*修改*@
                    <div id="UpdateCountry" class="row-fluid" style="display:none;">
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>DetailSYSName:</span>
                                <input type="text" id="DetailSYSName" name="DetailSYSName" class="m-wrap span8" disabled />
                            </div>
                            <div class="span4 ">
                                <span>DetailENName:</span>
                                <input type="text" id="DetailENName" name="DetailENName" class="m-wrap span8" />
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span></span>
                                <input type="button" id="Stock_Edit" name="=Stock_Edit" class="btn btn-default" value="Update" style="width:80px;height:35px;float:left;" />
                                <input type="button" id="Stock_Cancel_Edit" name="=Stock_Cancel_Edit" class="btn btn-default" value="Cancel" style="width:80px;height:35px;float:left;" />
                                <input type="hidden" id="UpdateId" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
