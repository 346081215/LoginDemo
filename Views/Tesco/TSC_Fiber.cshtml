@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TSC_Fiber</title>
    <script src="~/scripts/Tesco/TSC_Fiber.js"></script>
</head>
<body>
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                @*页眉*@
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">TSC_Fiber</em>
                        <em class="red-em" id="step2" style="display:none">TSC_Fiber_Search</em>
                        <em class="red-em" id="step3" style="display:none">TSC_Fiber_Operation</em>
                    </div>
                </div>
                @*页面*@
                <div class="portlet-body form">
                    @*条件*@
                    <div id="Query">
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>English:</span>
                                <input type="text" id="English_Select" name="English_Select" class="m-wrap span8">
                            </div>
                            <div class="span4 ">
                                <span></span>
                                <button id="btnSearch" class="btn btn-default" type="button" name="btnSearch">Search</button>
                                <button id="btnAdd" class="btn btn-default" type="button" name="btnSearch">Add New</button>
                            </div>
                        </div>
                    </div>

                    @*查询*@
                    <div class="portlet-body" id="Query-Results" style="display:none;">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="OrderDetail" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">ID</th>
                                        <th class="center">English</th>
                                        <th class="center">Notes</th>
                                        <th class="center">ModifiedBy</th>
                                        <th class="center">ModifiedOn</th>
                                        <th class="center">操作</th>
                                    </tr>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>
                        @* 分页 *@
                        <div class="row-fluid">
                            <div class="span4">
                                <div class="mypage">
                                    <ul>
                                        <li id="PageIndex"><<</li>
                                        <li id="Pageup"><</li>
                                        <li><input type="text" id="nowpage" value="1" /></li>
                                        <li>/</li>
                                        <li><i id="TotalPageCount">0</i></li>
                                        <li id="Pagewown">></li>
                                        <li id="PageLast">>></li>
                                        <li id="PageGO">GO</li>
                                        <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*添加修改*@
                    <div id="InsertCountry" class="row-fluid" style="display:none;">
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls"></div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span>English:</span>
                                <input type="text" id="English" name="English" class="m-wrap span8">
                            </div>
                            <div class="span4 ">
                                <span>Notes:</span>
                                <input type="text" id="Notes" name="Notes" class="m-wrap span8">
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">
                                <div class="control-group">
                                    <label class="control-label" for="firstName"></label>
                                    <div class="controls">
                                    </div>
                                </div>
                            </div>
                            <div class="span4 ">
                                <span></span>
                                <button id="TSC_Add" class="btn btn-default" type="button" name="TSC_Add" style="float:left;margin-right:5px;">Save</button>
                                <button id="TSC_Edit" class="btn btn-default" type="button" name="TSC_Edit" style="float:left;margin-right:5px;">Save</button>
                                <button id="TSC_Cancel" class="btn btn-default" type="button" name="TSC_Cancel" style="float:left;">Cancel</button>
                            </div>
                            <input type="hidden" id="UpdateId" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
