@using Resources
@{
    ViewBag.Title = "VendorOrderTracking";
    Layout = null;
}
<script src="~/scripts/Basicxx/VendorOrderTracking.js"></script>
@using (Html.BeginForm())
{
    <div class="row-fluid">
        <div class="span12">
            <div class="portlet box " id="form_wizard_1">
                <div class="portlet-title">
                    <div class="caption">
                        <em class="red-em" id="step1">Order Tracking</em>
                        <em class="gray-em" id="step2" style="display:none;">Query Results</em>
                        <em class="gray-em" id="step_ViewDetail" style="display:none;">View Detail</em>
                        <em class="gray-em" id="step_ViewArtwork" style="display:none;">View Artwork</em>
                        <em class="gray-em" id="step_ViewShipOrder" style="display:none;">View Shipment</em>
                    </div>
                </div>
                <div class="portlet-body form">
                    <div id="Query-order">
                        <h3 class="form-section" style="text-align:center"></h3>
                        @*第一行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">

                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">
                                <span>@OrderQuery.Brand:</span>
                                <input type="text" id="Brand" name="Brand" class="m-wrap span8" readonly="readonly" />
                                <input type="text" id="Cusprodcatid" name="Cusprodcatid" class="m-wrap span8" style="display:none;" />
                            </div>
                            <div class="span4 ">
                                <span>@OrderQuery.Category:</span>
                                <select id="Category" name="Category" class="m-wrap span8"></select>
                            </div>
                        </div>
                        @*第二行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">
                                <span>@OrderQuery.PrintShop:</span>
                                <select id="PrintShop" name="PrintShop" class="m-wrap span8"></select>
                            </div>
                            <div class="span4 ">
                                <span>@OrderQuery.Item:</span>
                                <select id="Item" name="Item" class="m-wrap span8"></select>
                            </div>
                        </div>
                        @*第三行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">

                                <span>@OrderQuery.Order_Date:</span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitStartTime">
                            </div>

                            
                            <div class="span4 ">
                                <span>@OrderQuery.OOS_NO:</span>
                                <input type="text" id="OOSNO" name="OOSNO" class="m-wrap span8" />
                            </div>
                        </div>
                        @*第四行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">

                                <span> </span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="SubmitEndTime">
                            </div>

                            <div class="span4 ">
                                <span>@OrderQuery.Status:</span>
                                <select id="Order_Status" name="Order_Status" class="m-wrap span8"></select>
                            </div>
                           
                        </div>
                        @*第五行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">

                                <span>@OrderQuery.Delivery_Date:</span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="DeliveryStartTime">
                            </div>
                            <div class="span4 ">
                                <span>@OrderQuery.Payment:</span>
                                <select id="Payment" name="Payment" class="m-wrap span8">
                                    <option value="">--All--</option>
                                    <option value="1">@OrderQuery.PaymentNo</option>
                                    <option value="2">@OrderQuery.PaymentYes</option>
                                </select>
                            </div>
                        </div>
                        @*第六行*@
                        <div class="row-fluid">
                            <div class="span2 span2_hide">

                                <div class="control-group">

                                    <label class="control-label" for="firstName"></label>

                                    <div class="controls">
                                    </div>

                                </div>

                            </div>
                            <div class="span4 ">

                                <span></span>
                                <input class="m-wrap m-ctrl-medium date-picker m-wrap span8" size="16" type="text" value="" name="DeliveryEndTime">
                            </div>

                        </div>
                        @*Query*@
                        <div class="row-fluid">
                            <p style="text-align:center">
                                <button type="button" id="btnQuery" name="btnQuery" class="btn btn-default" value="Query" style="border: 1px solid #D6D6D6;width: 170px;margin-left:0;">@OrderQuery.Query</button>
                            </p>
                        </div>
                    </div>
                    @*Table*@
                    <div class="portlet-body" id="Query-Results" style="display:none;">
                        <div id="Gridview" class="dataTables_wrapper form-inline" role="grid">
                            <table class="table table-striped table-bordered table-hover table-full-width dataTable" id="Order" aria-describedby="sample_2_info">
                                <thead>
                                    <tr role="row">
                                        <th class="center">@OrderQuery.Seq</th>
                                        <th class="center">@OrderQuery.Order_Date</th>
                                        <th class="center">@OrderQuery.Brand</th>
                                        <th class="center">@OrderQuery.Customer_No</th>
                                        <th class="center">@OrderQuery.Customer</th>
                                        @*<th class="center">Subcontract Supplier</th>*@
                                        <th class="center">@OrderQuery.PrintShop</th>
                                        <th class="center">@OrderQuery.OOS_NO</th>
                                        <th class="center">@OrderQuery.Item</th>
                                        <th class="center">@OrderQuery.Currency</th>
                                        <th class="center">@OrderQuery.Unit_Price</th>
                                        <th class="center">@OrderQuery.Order_Qty</th>
                                        <th class="center">@OrderQuery.Amount</th>
                                        <th class="center">@OrderQuery.Status</th>
                                        <th class="center">@OrderQuery.Payment</th>
                                        <th class="center">@OrderQuery.Pay_Date</th>
                                        <th class="center">@OrderQuery.View_Detail</th>
                                        <th class="center">@OrderQuery.Artwork</th>
                                        <th class="center">@OrderQuery.Delivery_Date</th>
                                        <th class="center">@OrderQuery.Upload_Date</th>
                                        <th class="center">@OrderQuery.AWB_number_POD</th>
                                </thead>
                                <tbody class="OrderDetail" role="alert" aria-live="polite" aria-relevant="all"></tbody>
                            </table>
                        </div>


                        @*分页*@
                        <div class="row-fluid" id="ExportExcel">

                            <div class="span4">
                                <div class="mypage">
                                    <ul>
                                        <li id="PageIndex"><<</li>
                                        <li id="Pageup"><</li>
                                        <li><input type="text" id="nowpage" value="1" /></li>
                                        <li>/</li>
                                        <li><i id="TotalPageCount">0</i></li>
                                        <li id="Pagewown">></li>
                                        <li id="PageLast">>></li>
                                        <li><input id="pc" name="pc" type="hidden" value=1><input id="PageTotalCount" name="PageTotalCount" type="hidden" value=1></li>
                                        <li id="PageGO">GO</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="span4">
                                <button type="submit" formaction="/Basicxx/VendorOrderTrackingExportExcel" id="btnExcel" name="btnExcel" class="btn btn-default" style="border: 1px solid #D6D6D6;width: 170px;margin-left: 33%;margin-top: -2px;">@OrderQuery.ExporttoExcel<i class="m-icon-swapright m-icon-white"></i></button>
                            </div>
                            @*<div class="span4">
                                    <div id="sample_1_length" class="dataTables_length">
                                        <label>
                                            Show
                                            <select size="1" name="sample_1_length" aria-controls="sample_1" class="m-wrap small">
                                                <option value="5" selected="selected">5</option>
                                                <option value="15">15</option>
                                                <option value="20">20</option>
                                                <option value="-1">All</option>
                                            </select> result per page
                                        </label>
                                    </div>
                                </div>*@
                        </div>

                    </div>
                    @*ViewDetail*@
                    <div class="portlet-body" id="Results-ViewDetail" style="display:none;">

                    </div>
                    @*ViewArtwork*@
                    <div class="ron" id="Results-ViewArtwork" style="display:none;">

                    </div>
                    @*ViewShipOrder*@
                    <div class="ron" id="Results-ViewShipOrder" style="display:none;">

                    </div>
                </div>
            </div>
        </div>
    </div>
}

